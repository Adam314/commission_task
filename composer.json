{
    "name": "adam314/commission-task",
    "description": "Calculating commission for transactions",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "Adam314\\CommissionTask\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Adam314\\CommissionTask\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "brick/money": "^0.9.0",
        "symfony/console": "^5.4",
        "symfony/dotenv": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "test-cs": "bin/phpcs",
        "test": ["@phpunit", "@test-cs"]
    }
}
